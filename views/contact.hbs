<div class="container">
    <h1 class="brand"><span>Alkomem</span> Web Design</h1>
    <div class="wrapper animated bounceInLeft">
      <div class="company-info">
        <h3>Alkomem Web Design</h3>
        <ul>
          <li><i class="fa fa-road"></i> Boezemstraat 400</li>
          <li><i class="fa fa-phone"></i> (+31) 657-5555-55</li>
          <li><i class="fa fa-envelope"></i> info@alkomem-design.com</li>
        </ul>
      </div>
      <div class="contact">
        <h3>Email Us</h3>
        {{msg}}
        <form action="send" method="POST">
          <p>
            <label>Name</label>
            <input type="text" name="name">
          </p>
          <p>
            <label>Company</label>
            <input type="text" name="company">
          </p>
          <p>
            <label>Email Address</label>
            <input type="email" name="email">
          </p>
          <p>
            <label>Phone Number</label>
            <input type="text" name="phone">
          </p>
          <p class="full">
            <label>Message</label>
            <textarea name="message" rows="5"></textarea>
          </p>
          <p class="full">
            <button type="submit">Submit</button>
          </p>
        </form>
      </div>
    </div>
  </div>
  